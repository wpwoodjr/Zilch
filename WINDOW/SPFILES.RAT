define(header, implicit integer (a-p,r-z); implicit logical (q)
include "memory.cmn")

  function sp_read_buffer(na,fp, err)
  header
  byte na(ARB), err(ARB)

  if (fp == null)
    return(null)
  bu = bu_find_by_name(na)
  if (bu == null) {
    bu = bu_new(na, EOS)
    if (! q_mp_read_file(bu, st_buffer(fp), 0, false)) {
      call st_deallocate(fp)
      fp = null
      call ms_error(err)
      return(null)
      }
    }
  return(bu)
  end
